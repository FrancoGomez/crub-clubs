<div class="p-4 main-container">
    {{> view/modals/confirmationModal}}
    {{> view/modals/notificationModal}}
    <header>
        <div class="d-flex justify-content-center align-content-center padding-4">
            <img src={{teamInfo.crestUrl}} alt="{{teamInfo.shortName}} crest"
                onerror="this.src='/img/defaultImage/default-image.svg'" class="mt-auto mb-auto me-3 image-big" />
            <div class="mt-2">
                <h1 class="fw-bold text-white m-auto title">{{teamInfo.name}}</h1>
                <p class="text-white paragraph">{{teamInfo.area.name}}</p>
            </div>
        </div>
    </header>
    <section class="pt-3">
        <div class="card blue-bg w-100 border-0 rounded-top" style="width: 18rem">
            <div class="card-body dark-blue-bg text-white fw-bold pb-2 rounded-top">
                <h5 class="card-title subtitle">Club overview</h5>
            </div>
            <iframe class="m-3 rounded" height="300" loading="lazy" allowfullscreen
                referrerpolicy="no-referrer-when-downgrade"
                src="https://www.google.com/maps/embed/v1/place?key={{MAPS_API_KEY}}
&q={{#if teamInfo.venue}}{{teamInfo.venue}},+{{teamInfo.area.name}}{{else}}{{teamInfo.address}},+{{teamInfo.area.name}}{{/if}}">
            </iframe>
            <ul class="list-group list-group-flush">
                <li class="list-group-item border-0 padding-2 dark-blue-bg text-white">
                    <h6 class="sub-subtitle">Also known as</h6>
                    <p class="paragraph">{{teamInfo.shortName}} ({{teamInfo.tla}})</p>
                </li>
                <li class="list-group-item border-0 padding-2 blue-bg text-white">
                    <h6 class="sub-subtitle">Location</h6>
                    {{#if teamInfo.venue}}
                    <p class="paragraph">{{teamInfo.venue}}, {{teamInfo.area.name}}</p>
                    {{else}}
                    <p class="paragraph">Not available</p>
                    {{/if}}
                </li>
                <li class="list-group-item border-0 padding-2 dark-blue-bg text-white">
                    <h6 class="sub-subtitle">Venue</h6>
                    {{#if teamInfo.venue}}
                    <p class="paragraph">{{teamInfo.venue}}</p>
                    {{else}}
                    <p class="paragraph">Not available</p>
                    {{/if}}
                </li>
                <li class="list-group-item border-0 padding-2 blue-bg text-white">
                    <h6 class="sub-subtitle">Foundation</h6>
                    {{#if teamInfo.founded}}
                    <p class="paragraph">{{teamInfo.founded}}</p>
                    {{else}}
                    <p class="paragraph">Not available</p>
                    {{/if}}
                </li>
                <li class="list-group-item border-0 padding-2 dark-blue-bg text-white">
                    <h6 class="sub-subtitle">Club colors</h6>
                    {{#if teamInfo.clubColors}}
                    <p class="paragraph">{{teamInfo.clubColors}}</p>
                    {{else}}
                    <p class="paragraph">Not available</p>
                    {{/if}}
                </li>
                <li class="list-group-item border-0 padding-2 blue-bg text-white">
                    <h6 class="sub-subtitle">Contact info</h6>
                    {{#if teamInfo.website}}
                    <div class="mb-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-globe2 me-1 mb-1" viewBox="0 0 16 16">
                            <path
                                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855-.143.268-.276.56-.395.872.705.157 1.472.257 2.282.287V1.077zM4.249 3.539c.142-.384.304-.744.481-1.078a6.7 6.7 0 0 1 .597-.933A7.01 7.01 0 0 0 3.051 3.05c.362.184.763.349 1.198.49zM3.509 7.5c.036-1.07.188-2.087.436-3.008a9.124 9.124 0 0 1-1.565-.667A6.964 6.964 0 0 0 1.018 7.5h2.49zm1.4-2.741a12.344 12.344 0 0 0-.4 2.741H7.5V5.091c-.91-.03-1.783-.145-2.591-.332zM8.5 5.09V7.5h2.99a12.342 12.342 0 0 0-.399-2.741c-.808.187-1.681.301-2.591.332zM4.51 8.5c.035.987.176 1.914.399 2.741A13.612 13.612 0 0 1 7.5 10.91V8.5H4.51zm3.99 0v2.409c.91.03 1.783.145 2.591.332.223-.827.364-1.754.4-2.741H8.5zm-3.282 3.696c.12.312.252.604.395.872.552 1.035 1.218 1.65 1.887 1.855V11.91c-.81.03-1.577.13-2.282.287zm.11 2.276a6.696 6.696 0 0 1-.598-.933 8.853 8.853 0 0 1-.481-1.079 8.38 8.38 0 0 0-1.198.49 7.01 7.01 0 0 0 2.276 1.522zm-1.383-2.964A13.36 13.36 0 0 1 3.508 8.5h-2.49a6.963 6.963 0 0 0 1.362 3.675c.47-.258.995-.482 1.565-.667zm6.728 2.964a7.009 7.009 0 0 0 2.275-1.521 8.376 8.376 0 0 0-1.197-.49 8.853 8.853 0 0 1-.481 1.078 6.688 6.688 0 0 1-.597.933zM8.5 11.909v3.014c.67-.204 1.335-.82 1.887-1.855.143-.268.276-.56.395-.872A12.63 12.63 0 0 0 8.5 11.91zm3.555-.401c.57.185 1.095.409 1.565.667A6.963 6.963 0 0 0 14.982 8.5h-2.49a13.36 13.36 0 0 1-.437 3.008zM14.982 7.5a6.963 6.963 0 0 0-1.362-3.675c-.47.258-.995.482-1.565.667.248.92.4 1.938.437 3.008h2.49zM11.27 2.461c.177.334.339.694.482 1.078a8.368 8.368 0 0 0 1.196-.49 7.01 7.01 0 0 0-2.275-1.52c.218.283.418.597.597.932zm-.488 1.343a7.765 7.765 0 0 0-.395-.872C9.835 1.897 9.17 1.282 8.5 1.077V4.09c.81-.03 1.577-.13 2.282-.287z" />
                        </svg>
                        <a href="{{teamInfo.website}}"
                            class="link-light text-decoration-none paragraph">{{teamInfo.website}}</a>
                    </div>
                    {{/if}}
                    {{#if teamInfo.phone}}
                    <div class="mb-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-telephone me-1 mb-1" viewBox="0 0 16 16">
                            <path
                                d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                        </svg>
                        <a href="{{teamInfo.phone}}"
                            class="link-light text-decoration-none paragraph">{{teamInfo.phone}}</a>
                    </div>
                    {{/if}}
                    {{#if teamInfo.email}}
                    <div class="mb-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-envelope me-1 mb-1" viewBox="0 0 16 16">
                            <path
                                d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                        </svg>
                        <a href="{{teamInfo.email}}"
                            class="link-light text-decoration-none paragraph">{{teamInfo.email}}</a>
                    </div>
                    {{/if}}
                </li>
            </ul>
        </div>
        <div class="d-flex justify-content-center align-content-center padding-4">
            {{> view/buttons/editClub}}
            {{> view/buttons/deleteClub}}
        </div>
    </section>
</div>

<script src="/handlers/handleSettingDeleteButton.js"></script>
<script src="/handlers/handleRedirect.js"></script>